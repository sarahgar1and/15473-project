{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "${workspaceFolder}/**/*.cpp",
                "-o", "3D-OpenGL",

                "-I/opt/homebrew/opt/sfml/include",
                "-L/opt/homebrew/opt/sfml/lib",

                "-I/opt/homebrew/opt/glew/include",
                "-L/opt/homebrew/opt/glew/lib",

                "-I/opt/homebrew/opt/glm/include",

                "-I/opt/homebrew/opt/assimp/include",
                "-L/opt/homebrew/opt/assimp/lib",

                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",

                "-lGLEW",
                "-framework", "OpenGL",

                "-lassimp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}